@model PayStackTesting.Dtos.RequestModel.VerifyPaymentRequestDto
{

@{
    ViewData["Title"] = "Verify Payment";
}

<h2>Verify Payment</h2>

<form asp-action="VerifyPayment" method="post">
    <div class="form-group">
        <label asp-for="Reference">Payment Reference</label>
        <input asp-for="Reference" class="form-control" />
        <span asp-validation-for="Reference" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Verify Payment</button>
</form>
